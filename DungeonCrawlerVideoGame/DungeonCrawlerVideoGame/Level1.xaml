        <!-- Weapon Bar at the Bottom -->
        <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="150" Background="Transparent">

            <StackPanel Orientation="Horizontal" Height="100" Width="536">
                <StackPanel.Background>
                    <ImageBrush ImageSource="Assets/Weapons/WeaponBar.png" Stretch="Fill"/>
                </StackPanel.Background>
                <Border x:Name="WeaponSlot1" BorderBrush="Transparent" BorderThickness="2" Width="45" Height="45" Margin="3">
                    <Image Source="Assets/Weapons/Weapon1.png" Stretch="Fill" RenderTransformOrigin="0.512,0.451" Margin="68,-6,-68,6"/>
                </Border>
                <Border x:Name="WeaponSlot2" BorderBrush="Transparent" BorderThickness="2" Width="45" Height="44" RenderTransformOrigin="0.533,0.568">
                    <Image Source="Assets/Weapons/Weapon2.png" Stretch="Uniform" Margin="132,-5,-132,5" RenderTransformOrigin="0.439,0.622"/>
                </Border>
                <Border x:Name="WeaponSlot3" BorderBrush="Transparent" BorderThickness="2" Width="45" Height="45">
                    <Image Source="Assets/Weapons/Weapon3.gif" Stretch="Uniform" Margin="216,-7,-218,5"/>
